<p>
  <strong>名前:</strong>
  <%= @feed.name %>
</p>

<p>
  <strong>画像:</strong>
  <%= image_tag @feed.image.url, :size =>'300x200' %>
</p>

<p>
  <strong>コメント:</strong>
  <%= @feed.comment %>
</p>

<p>
  <strong>日付:</strong>
  <%= simple_time(@feed[:date]) %>
</p>

<%# unless @feed.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(feed_id: @feed.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<%# end %>

<br><br><br>

<%if @feed.user_id == current_user.id %>
  <%= link_to '画像を編集', edit_feed_path(@feed) %> |
  <%= link_to '画像を削除', @feed, method: :delete, data: { confirm: '本当に画像を削除しますか？' } %>
<% end %>

<p>
  <%= link_to '投稿一覧へ', feeds_path %>
</p>
